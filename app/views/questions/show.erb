<h2><%= @question.title %></h2>
<p><%= @question.body %></p>
<form method="post" action="/posts/<%= @question.id %>/vote" class="inline">
  <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
</form>
<form method="post" action="/posts/<%= @question.id %>/downvote" class="inline">
  <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
</form>
<h3>Score:</h3>
<p><%= @question.votes.reduce(0) { |sum, vote| sum += vote.value } %></p>

<h3>Answers:</h3>
<ul>
  <% @question.answers.each do |ans| %>
  <div>
    <p><%= ans.votes.reduce(0) { |sum, vote| sum += vote.value } %></p>
  </div>
  <li><h3><%= ans.body %></h3></li>
  <form method="post" action="/posts/<%= ans.id %>/vote/answer" class="inline">
    <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
  </form>
  <form method="post" action="/posts/<%= ans.id %>/downvote/answer" class="inline">
    <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
  </form>
<h4>Comments:</h4>
  <ul>
  <% ans.comments.each do |com| %>
    <li><%= com.body %></li>
    <div>
      <p><%= com.votes.reduce(0) { |sum, vote| sum += vote.value } %></p>
    </div>
    <form method="post" action="/posts/<%= com.id %>/vote/comment" class="inline">
      <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
    </form>
    <form method="post" action="/posts/<%= com.id %>/downvote/comment" class="inline">
      <button type="submit" name="submit_param" value="submit_value">ğŸ‘</button>
    </form>
  <% end %>
  </ul>
  <% end %>
</ul>
